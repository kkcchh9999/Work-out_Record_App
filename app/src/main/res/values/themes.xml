        <item name="colorPrimary">@color/white2 </item>
        <item name="colorPrimarySurface">@color/white2</item>
        <item name="colorPrimaryVariant">@color/white2</item>
        <item name="colorOnPrimary">@color/white2</item>
        <item name="android:textColorPrimary">@color/gray</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white2</item>
        <!-- Customize your theme here. -->

        <item name="iconTint">@color/gray</item>
        <item name="android:navigationBarColor">@color/white2</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:windowElevation">0dp</item>
